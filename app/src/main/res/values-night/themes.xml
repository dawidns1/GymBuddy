<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GymBuddy" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_500</item>
        <item name="colorPrimaryVariant">@color/orange_700</item>
        <item name="colorOnPrimary">@color/grey_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange_200</item>
        <item name="colorSecondaryVariant">@color/orange_200</item>
        <item name="colorOnSecondary">@color/grey_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="actionBarTheme">@style/AppTheme.AppBarOverlay</item>
        <item name="android:dropDownListViewStyle">@style/SpinnerStyle</item>
        <item name="popupMenuBackground">@drawable/popup_menu</item>
        <item name="android:textColorSecondary">@color/orange_500</item>
    </style>

    <style name="Theme.GymBuddy.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/grey_700</item>
    </style>

    <style name="DefaultAlertDialogTheme" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/grey_700</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/grey_500</item>
        <item name="colorControlActivated">@color/orange_500</item>
        <item name="android:buttonBarNegativeButtonStyle" tools:targetApi="lollipop">
            @style/ActionButtonStyle
        </item>
        <item name="android:buttonBarPositiveButtonStyle" tools:targetApi="lollipop">
            @style/ActionButtonStyle
        </item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="ActionButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/orange_500</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="backgroundTint">@drawable/btn_color</item>
        <item name="android:textColor">@drawable/edt_text_color</item>
        <item name="android:textColorHint">@color/grey_500</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/grey_500</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:textColor">@color/grey_200</item>
    </style>

    <style name="DefaultNumberPickerTheme" parent="Theme.GymBuddy">
        <item name="colorControlNormal">@color/orange_500</item>
    </style>

    <style name="eFABStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="strokeColor">@drawable/btn_color</item>
        <item name="strokeWidth">2dp</item>
        <item name="backgroundTint">@color/orange_500_alpha</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/orange_500</item>
        <item name="iconTint">@color/white</item>
    </style>

</resources>