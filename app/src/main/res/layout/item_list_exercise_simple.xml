<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentExerciseSimple"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardBackgroundColor="@color/grey_500">

           <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

               <TextView
                   android:id="@+id/txtExerciseNameSimple"
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="5dp"
                   android:layout_marginEnd="5dp"
                   android:text="ExerciseName"
                   android:textSize="13dp"
                   app:layout_constraintEnd_toStartOf="@+id/txtSetsNoSimple"
                   app:layout_constraintStart_toEndOf="@+id/imgExerciseSimple"
                   app:layout_constraintTop_toTopOf="parent"
                   android:maxLines="1"
                   android:ellipsize="end"/>

               <TextView
                   android:id="@+id/txtSetsNoSimple"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_toEndOf="@+id/txtExerciseNameSimple"
                   android:text="# sets"
                   android:textSize="13dp"
                   app:layout_constraintBottom_toBottomOf="@+id/txtExerciseNameSimple"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintTop_toTopOf="@+id/txtExerciseNameSimple" />

               <ImageView
                   android:id="@+id/imgExerciseSimple"
                   android:layout_width="16dp"
                   android:layout_height="0dp"
                   app:layout_constraintBottom_toBottomOf="@+id/txtExerciseNameSimple"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="@+id/txtExerciseNameSimple"
                   android:src="@drawable/ic_hexagon_double_vertical" />

        </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>